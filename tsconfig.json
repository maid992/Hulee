{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "checkJs": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",

    "alwaysStrict": true,
  }
}

